<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProtectU" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="backgroundColor">@color/backgroundColor</item>
        <item name="android:actionBarStyle">@color/backgroundColor</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.App.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_layout</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowFullscreen">true</item>
    </style>

<!--    Themes-->
    <style name="Theme.Light" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="backgroundColor">@color/backgroundColor</item>
        <item name="backgroundColorSelected">@color/backgroundColorSelected</item>
        <item name="textColor">@color/black</item>
        <item name="primaryButton">@color/primary_button</item>
        <item name="floatButton">@color/white</item>
        <item name="floatButtonText">@color/black</item>
    </style>

    <style name="Theme.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="backgroundColor">@color/backgroundColor_dark</item>
        <item name="backgroundColorSelected">@color/backgroundColorSelected_dark</item>
        <item name="textColor">@color/white</item>
        <item name="primaryButton">@color/primary_button</item>
        <item name="floatButton">@color/primary_button</item>
        <item name="floatButtonText">@color/white</item>
    </style>
</resources>