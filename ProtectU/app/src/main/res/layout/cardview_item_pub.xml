<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="161dp"
    android:layout_height="137dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/image_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/profile_name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="David Ferreira"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:textSize="8dp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/name_of_the_missing_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luke,"
                android:textColor="@color/black"
                android:layout_marginTop="98dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/profile_name_id"
                />

            <TextView
                android:id="@+id/age_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/name_of_the_missing_id"
                android:layout_marginTop="114dp"

                />

        </RelativeLayout>

        <TextView
            android:id="@+id/card_id"
            android:textSize="13sp"
            android:layout_gravity="center"
            android:paddingBottom="100dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Luke"
            android:textColor="@color/white"/>



</androidx.cardview.widget.CardView>