<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor">


    <TextView
        android:id="@+id/txtLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/lexend_bold"
        android:text="@string/lbl_languague"
        android:textAlignment="center"
        android:textColor="?attr/textColor"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txtEnglish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/lexend_regular"
        android:paddingVertical="6dp"
        android:paddingStart="25dp"
        android:text="English"
        android:textColor="?attr/textColor"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLanguage" />


    <TextView
        android:id="@+id/txtPortuguese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lexend_regular"
        android:paddingVertical="8dp"
        android:paddingStart="25dp"
        android:text="Português"
        android:textColor="?attr/textColor"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/txtFrench"
        app:layout_constraintStart_toStartOf="@+id/txtFrench"
        app:layout_constraintTop_toBottomOf="@+id/txtEnglish" />


    <TextView
        android:id="@+id/txtFrench"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lexend_regular"
        android:paddingVertical="8dp"
        android:paddingStart="25dp"
        android:text="Français"
        android:textColor="?attr/textColor"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/txtGerman"
        app:layout_constraintStart_toStartOf="@+id/txtGerman"
        app:layout_constraintTop_toBottomOf="@+id/txtPortuguese" />


    <TextView
        android:id="@+id/txtGerman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lexend_regular"
        android:paddingVertical="8dp"
        android:paddingStart="25dp"
        android:text="Deutsch"
        android:textColor="?attr/textColor"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/txtUkrainian"
        app:layout_constraintStart_toStartOf="@+id/txtUkrainian"
        app:layout_constraintTop_toBottomOf="@+id/txtFrench" />


    <TextView
        android:id="@+id/txtUkrainian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/lexend_regular"
        android:paddingVertical="8dp"
        android:paddingStart="25dp"
        android:text="Українська"
        android:textColor="?attr/textColor"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGerman" />


    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="151dp"
        android:backgroundTint="?attr/primaryButton"
        android:text="@string/btn_save"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>
