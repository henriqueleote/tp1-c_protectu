<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor">

    <ImageView
        android:id="@+id/backID"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_arrow_back_black_24dp"
        app:tint="?attr/textColor" />


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Language"
        android:fontFamily="@font/lexend_regular"
        android:paddingTop="15dp"
        android:textColor="?attr/textColor"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


        <RelativeLayout
            android:id="@+id/portugueseContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/title">
            <TextView
                android:id="@+id/portugueseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Portuguese"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?attr/textColor"/>

            <CheckBox
                android:id="@+id/portugueseRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/portugueseTextView"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:backgroundTint="?attr/textColor" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/englishContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/portugueseContainer">
            <TextView
                android:id="@+id/englishTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="English"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?attr/textColor"/>

            <CheckBox
                android:id="@+id/englishRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/englishTextView"
                android:layout_marginRight="20dp"
                android:layout_alignParentEnd="true"
                android:backgroundTint="?attr/textColor"/>
        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/frenchContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/englishContainer">
        <TextView
            android:id="@+id/frenchTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Français"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?attr/textColor"/>

        <CheckBox
            android:id="@+id/frenchRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/frenchTextView"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="?attr/textColor"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/germanContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/frenchContainer">
        <TextView
            android:id="@+id/germanTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Deutsch"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?attr/textColor"/>

        <CheckBox
            android:id="@+id/germanRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/germanTextView"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="?attr/textColor"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ukrainianContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/germanContainer">

        <TextView
            android:id="@+id/ukrainianTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="український"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="?attr/textColor" />

        <CheckBox
            android:id="@+id/ukrainianRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ukrainianTextView"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="?attr/textColor"/>
    </RelativeLayout>


    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="151dp"
        android:backgroundTint="?attr/primaryButton"
        android:text="@string/btn_save"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>
