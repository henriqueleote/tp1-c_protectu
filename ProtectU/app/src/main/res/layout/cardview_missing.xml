<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="140dp"
    android:layout_height="137dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp"
    android:id="@+id/cardMissingID">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/imageProfileID"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_about_menu"
            />
        <ImageView
            android:id="@+id/imageMissingID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/profileNameID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="David Ferreira"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:textSize="8dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/nameOfTheMissingID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luke,"
                android:textColor="@color/black"
                android:layout_marginTop="98dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/profileNameID" />

            <TextView
                android:id="@+id/ageID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/nameOfTheMissingID"
                android:layout_marginTop="114dp" />

        </RelativeLayout>





</androidx.cardview.widget.CardView>